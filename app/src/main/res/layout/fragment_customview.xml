<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/llFragmentCustomView"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.example.studyandroid.view.CustomView.CircleBorderTextView
        android:id="@+id/ctv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/circle_border_textview_background"
        android:text="Apple"
        app:borderColor="@color/Aqua"
        app:thickness="10dp" />

    <com.example.studyandroid.view.CustomView.GraduallyFillBorderTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/Orange"
        app:gfb_progress="0"
        app:gfb_borderColor="@color/Orange"
        app:gfb_thickness="10dp" />
</LinearLayout>